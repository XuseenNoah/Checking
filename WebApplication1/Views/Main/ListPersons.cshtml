@model IEnumerable<WebApplication1.ViewModels.Customers>

@{
    ViewBag.Title = "ListPersons";
}
@if (TempData["Succesupdate"] != null)
{
    <h3 class="alert alert-success">@TempData["Succesupdate"] </h3>
}
@if (TempData["Succesdel"] != null)
{
    <h3 class="alert alert-success">@TempData["Succesdel"]</h3>
}
<h2>ListPersons</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdatePerson", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeletePerson", new { id=item.Id })
        </td>
    </tr>
}

</table>
